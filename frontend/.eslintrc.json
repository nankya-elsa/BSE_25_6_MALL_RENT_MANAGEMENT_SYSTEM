{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "@typescript-eslint/no-require-imports": "off",
        "no-undef": "off"
      }
    },
    {
      "files": ["**/babel.config.js"], // <--- updated to match any folder
      "env": { "node": true }
    }
  ]
}